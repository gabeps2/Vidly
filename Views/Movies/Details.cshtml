@model Vidly2.Models.Movies
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

@if (Model.id < 0)
{
    <h3>Sorry, this movies is not in the catalog.</h3>
}
else
{
    <h3>@Model.name</h3>
    <ul>
        <li>Genre: @Model.Genre</li>
        <li>Release Date: @Model.ReleaseDate</li>
        <li>Date Added: @Model.DateAdded</li>
        <li>Number in Stocke: @Model.NumberInStock</li>
    </ul>
}


