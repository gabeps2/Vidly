@model Vidly2.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

@if (Model.id < 0)
{
    <h3>Sorry, this Customer is not exist.</h3>
}
else
{
    <h2>@Model.name</h2>
    <ul>
        <li>Membership Type: @Model.MembershipType.Name</li>
        @if (Model.Birthdate != null)
        {
            <li><p>Birthdate: @Model.Birthdate</p></li>
        }
    </ul>
}
