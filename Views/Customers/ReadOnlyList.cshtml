@model Vidly2.ViewModels.CustomersViewModel
@{
    ViewBag.Title = "Customers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<table id="customers" class="table table-bordered table-rover">
    <thead>
        <tr>
            <th>Costumer</th>
            <th>Discount Rate</th>
        </tr>
    </thead>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {

            var table = $("#customers").DataTable({
                ajax: {
                    url: "/api/customers",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                    },
                    {
                        data: "membershipType.name"
                    },
                ]
            });
        });
    </script>

}